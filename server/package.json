{
  "name": "loved-server",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run lint && rm -rf build && tsc --noEmitOnError && npm run permissions",
    "lint": "eslint --max-warnings 0 .",
    "permissions": "chmod +x ./build/bin/*.js",
    "start": "rm -rf build && exec tsc-watch --noClear --onSuccess \"sh -c 'npm run permissions && ./build/bin/server.js'\""
  },
  "dependencies": {
    "async-lock": "^1.4.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mysql-session": "^3.0.0",
    "express-session": "^1.17.3",
    "http-terminator": "^3.2.0",
    "loved-bridge": "file:../bridge",
    "mysql": "^2.18.1",
    "superagent": "^8.0.9"
  },
  "devDependencies": {
    "@types/async-lock": "^1.4.0",
    "@types/express": "^4.17.17",
    "@types/express-mysql-session": "^2.1.3",
    "@types/mysql": "^2.15.21",
    "@types/node": "^18.16.18",
    "@types/superagent": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-regex": "^1.10.0",
    "prettier": "^2.8.8",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18"
  }
}
