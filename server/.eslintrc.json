{
  "root": true,
  "extends": [
    "../.eslintrc.json",
    "plugin:n/recommended"
  ],
  "plugins": [
    "regex"
  ],
  "rules": {
    "n/no-process-exit": "off",
    "n/no-unsupported-features/es-syntax": "off",
    "n/shebang": "off",
    "regex/invalid": [
      "error",
      [
        {
          "regex": "\\.locals",
          "message": "Use `typedLocals` instead"
        },
        {
          "regex": "INSERT[^()]+VALUES",
          "message": "List fields when running INSERTs"
        }
      ]
    ]
  }
}
